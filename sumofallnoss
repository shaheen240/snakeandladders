//finding the sum of all the nos ;
#include <iostream>
using namespace std;
int main (){
    int sum =0, rem , num;
    
    cout<<"enter a no u want to find the sum of \n";
    cin>>num ;
    
    while (num>0){
        rem=num%10;
        sum=sum+rem;
        num=num/10;
    }
    
    cout<<"the sum of the no is " <<sum;
    return 0 ;
}
