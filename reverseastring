#include<iostream>
#include<string>
using namespace std;
int main(){
    string str;
    string temp;
    
    cout<<"enter a string to reverse\n";
    cin>>str;
    
    
    
    for(int i =str.length()-1 ; i>=0 ; i--) {
        cout<<str[i];
        temp=str[i];
        
    }
    if(temp==str){
        cout<<"palindrome";
    }
    else {
        cout<<"NOOOO palindrome";
    }
    return 0;
}
