#include<iostream>
#include <string>
using namespace std;
    bool isPalindrome(string str){
        int n=str.length();
        for (int i =0 ; i<n/2 ; i++){-
            if (str[i]!=str[n-i-1]){
                return false;
            }
        }
        return true;
    }
int main() {
    string str;
    cout<<"enter a string :";
   cin>>str;
    
    if(isPalindrome(str)){
        cout<<"the string is a palindrome";
        
    }else {
        cout<<"The string is not a palindrome";
    }
    return 0 ;
}

