#include <iostream>
using namespace std;

int main()
{
   
   int data[5];
   cout << "Enter elements: ";

   for(int i = 0; i < 4; ++i)
      cin >>data[i];

   cout << "You entered: ";
   for(int i = 0; i < 4; ++i)
      cout <<data[i]+i; //endl << *(data +i);//* will tell us the address of data 

   return 0;
}
